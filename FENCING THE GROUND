#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */ 
    int l,b;
    scanf("%d\t%d",&l,&b);
    printf("Required length is %.2fm\n",(float)2*(l+b));
    printf("Required quantity of carpet is %.2fsqm",(float)l*b);
    return 0;
}
